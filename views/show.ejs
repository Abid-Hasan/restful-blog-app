<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header"><%= blog.title %></div>
  <div class="ui top attached">
    <div class="item">
      <div class="content">
        <div><%= blog.created.toDateString() %></div>
      </div>
      <img class="ui centered rounded image" src="<%= blog.image %>" alt="">
      <div class="description">
        <p class="ui segment"><%- blog.body %></p>
      </div>
      <div class="ui two buttons">
        <a class="ui green basic button" href="/blogs/<%= blog._id %>/edit">
          <span class="ui green inverted button">Edit</span>
        </a>
        <form class="ui red basic button" id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
          <button class="ui red inverted button">Delete</button>
        </form>
      </div>
    </div>
  </div>
  
</div>

<% include partials/footer %>